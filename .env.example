# Application
NODE_ENV=development
PORT=3000
APP_NAME=response-processor
API_PREFIX=api

# Database (PostgreSQL - for later Prisma/TypeORM integration)
DATABASE_URL=postgresql://user:password@localhost:5436/response_processor
DB_HOST=localhost
DB_PORT=5436
DB_NAME=response_processor
DB_USER=postgres
DB_PASSWORD=
DB_SSL=false

# Email Provider Configuration
EMAIL_PROVIDER=sendgrid  # sendgrid, mailgun, ses

# SendGrid
SENDGRID_API_KEY=
SENDGRID_WEBHOOK_SECRET=

# Mailgun
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
MAILGUN_WEBHOOK_SIGNING_KEY=

# Auto Reply
AUTO_REPLY_ENABLED=false
AUTO_REPLY_FROM=noreply@yourdomain.com
AUTO_REPLY_FROM_NAME=Response Processor

# Phone (Twilio - for future use)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
