# Application
NODE_ENV=development
PORT=3000
APP_NAME=response-processor
API_PREFIX=api

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5436/response_processor

# Email Provider Configuration
EMAIL_PROVIDER=sendgrid  # sendgrid, mailgun, ses

# SendGrid
SENDGRID_API_KEY=
SENDGRID_WEBHOOK_SECRET=

# Mailgun
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
MAILGUN_WEBHOOK_SIGNING_KEY=

# Auto Reply
AUTO_REPLY_ENABLED=false
AUTO_REPLY_FROM=noreply@yourdomain.com
AUTO_REPLY_FROM_NAME=Response Processor

# Twilio Voice
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
TWILIO_VOICE=Polly.Joanna
TWILIO_VOICE_LANGUAGE=en-US
WEBHOOK_BASE_URL=http://localhost:3000

# OpenRouter AI
OPENROUTER_API_KEY=
OPENROUTER_MODEL=anthropic/claude-3-haiku
APP_URL=http://localhost:3000